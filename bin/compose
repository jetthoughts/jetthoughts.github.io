#!/usr/bin/env sh

set -e

# Set Docker platform for ARM-based Macs (M1/M2 chips)
if [ "$(uname -s)" = "Darwin" ]; then
  case "$(uname -m)" in
    arm*)
      export DOCKER_DEFAULT_PLATFORM=linux/arm64/v8
      ;;
  esac
fi

docker compose \
  -f .dev/compose.yml \
  -p "${DOCKED_PROJECT_NAME:-jtcom}" \
  "$@"
