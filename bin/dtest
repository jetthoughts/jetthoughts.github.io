#!/usr/bin/env bash

set -euo pipefail

echo "Building Hugo site for tests (public-dtest)..."
hugo --noBuildLock --environment test --destination _dest/public-dtest --gc --logLevel warn --baseURL="http://localhost:1314" --gc --cleanDestinationDir

# Now run the tests in Docker
echo "Running tests..."
bin/docked t "$@"
